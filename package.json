{
  "name": "inferra-cli",
  "version": "1.0.1",
  "description": "Terminal client for interacting with the Inferra local server REST API",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "inferra": "dist/index.js"
  },
  "scripts": {
    "build": "node esbuild.config.cjs",
    "start": "node dist/index.js",
    "dev": "node esbuild.config.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "llm",
    "cli",
    "inferra",
    "local-ai",
    "terminal",
    "chat",
    "local-server"
  ],
  "author": "Inferra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sbhjt-gr/inferra.git",
    "directory": "inferra-cli/inferra-cli"
  },
  "bugs": {
    "url": "https://github.com/sbhjt-gr/inferra/issues"
  },
  "homepage": "https://github.com/sbhjt-gr/inferra/tree/main/inferra-cli/inferra-cli#readme",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "highlight.js": "^11.9.0",
    "ink": "^4.4.1",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "marked": "^12.0.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "react": "^18.2.0",
    "string-width": "^7.0.0",
    "strip-ansi": "^7.1.0",
    "undici": "^6.0.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
